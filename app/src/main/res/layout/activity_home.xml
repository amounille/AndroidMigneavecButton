<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E6">

    <!-- Image en haut de l'écran -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logomairie"/>

    <!-- Nom de l'application en-dessous de l'image -->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="Migné Adventure"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#00703C"/>

    <!-- Description de l'application sous le nom -->
    <TextView
        android:id="@+id/textViewAppDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppName"
        android:text="Découvrez et redécouvrez votre commune"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#00703C"/>

    <!-- Boutons pour les parcours -->
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppDesc"
        android:text="Parcours 1"
        android:drawablePadding="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_alignParentStart="true"
        android:onClick="launchMainActivity"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppDesc"
        android:text="Parcours 2"
        android:drawablePadding="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
